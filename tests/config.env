# Catalyst E2E Test Configuration

# Backend configuration
export BACKEND_URL="http://localhost:3000"
export BACKEND_WS_URL="ws://localhost:3000/ws"

# Database configuration
export DATABASE_URL="postgresql://aero:aero@localhost:5432/aero_test"

# Test timeouts (seconds)
export SERVICE_TIMEOUT=30
export CONTAINER_TIMEOUT=60
export WEBSOCKET_TIMEOUT=10

# Test data
export TEST_USER_EMAIL="test-admin@example.com"
export TEST_USER_PASSWORD="TestPassword123!"  # At least 8 characters
export TEST_USER_USERNAME="testadmin"

# Container test configuration
export TEST_CONTAINER_IMAGE="alpine:latest"
export TEST_MINECRAFT_IMAGE="itzg/minecraft-server:latest"

# Cleanup settings
export CLEANUP_ON_SUCCESS=true
export CLEANUP_ON_FAILURE=false

# Logging
export LOG_LEVEL="info"
export TEST_LOG_DIR="/tmp/catalyst-tests"

# Create log directory
mkdir -p "$TEST_LOG_DIR"
